#include <iostream>

using namespace std;

int dividors(int n, int sum){
    int sum1 = sum;
    if(n%2 == 0){
        sum1++;
        return dividors(n/2, sum1);
    }
    else{
        for(int i=3; i*i <= n; i+=2){
            if(n%i == 0){
                sum1++;
                return dividors(n/i, sum1);
            }
        }
        if (sum1 == sum){
            sum1++;
        }
    }
    return sum1;
}

int main(){
    int n, sum = 0;
    cin >> n;
    sum = dividors(n, sum);
    if (sum == 0 && n > 1){
        sum++;
    }
    cout << sum;
    return 0;
}
